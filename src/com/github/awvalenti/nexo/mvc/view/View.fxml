<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.text.Font?>

<SplitPane dividerPositions="0.5" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.152" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.awvalenti.nexo.mvc.controller.Controller">
   <items>
      <TabPane prefHeight="200.0" prefWidth="200.0" side="BOTTOM" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Source code">
               <content>
                  <TextArea fx:id="txtSourceCode" onKeyTyped="#codeTyped" prefHeight="200.0" prefWidth="200.0" wrapText="true">
                     <font>
                        <Font name="Consolas Bold" size="16.0" />
                     </font>
                  </TextArea>
               </content>
          </Tab>
        </tabs>
      </TabPane>
      <TabPane prefHeight="200.0" prefWidth="200.0" side="BOTTOM" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Standard output">
               <content>
                  <TextArea fx:id="txtStdout" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true">
                     <font>
                        <Font name="Consolas Bold" size="16.0" />
                     </font>
                  </TextArea>
               </content>
          </Tab>
          <Tab text="Error output">
               <content>
                  <TextArea fx:id="txtStderr" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true">
                     <font>
                        <Font name="Consolas Bold" size="16.0" />
                     </font>
                  </TextArea>
               </content>
          </Tab>
        </tabs>
      </TabPane>
   </items>
</SplitPane>
